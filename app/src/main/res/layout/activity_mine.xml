<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.stx.xhb.DCAPlatform.activities.SettingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/setting_toolbar"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        app:theme="@style/ToolbarTheme"
        android:layout_height="wrap_content">
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:background="@color/colorGray"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:background="@drawable/biz_read_subscription_source_list_header_bg">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="15dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:clickable="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/app"
            app:civ_border_color="#fcfcfc"
            app:civ_border_width="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:text="姓名">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="177****3695">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ac_registered"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/toggle_fillet"
            android:clickable="true">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/biz_navigation_tab_news_selected"
            >
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已报名"></TextView>

    </LinearLayout>
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#EEEFFF"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:id="@+id/ac_underway"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/toggle_fillet"
            android:clickable="true">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/biz_navigation_tab_news_selected"
                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在进行"></TextView>

        </LinearLayout>
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#EEEFFF"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:id="@+id/ac_end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/toggle_fillet"
            android:clickable="true">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/biz_navigation_tab_news_selected"
                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已结束"></TextView>

        </LinearLayout>
        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#EEEFFF"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:id="@+id/ac_honor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/toggle_fillet"
            android:clickable="true">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/trophy"
                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="荣誉墙"></TextView>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/setting_iv_clearCache"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:background="@drawable/selector_trans_divider"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="清除缓存"/>

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/app_ic_goto"/>
        <TextView
            android:id="@+id/tv_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_right"
            android:text="0kb"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorGray"
        android:layout_height="0.5dp"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorGray"
        android:layout_height="0.5dp"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorGray"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/setting_iv_about"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:background="@drawable/selector_trans_divider"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="关于"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/app_ic_goto"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/colorGray"
        android:layout_height="0.5dp"/>
</LinearLayout>
